
<dir id="conteudo">
  <h1>Contato</h1>

    <%= form_for(@contato) do |f| %>
      <% if @contato.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@contato.errors.count, "error") %> prohibited this contato from being saved:</h2>

          <ul>
          <% @contato.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :nome %><br>
        <%= f.text_field :nome %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :tipo_id %><br>
        <%= collection_select(:contato, :tipo_id, @lista_de_tipos, :id, :descricao) %>
      </div>

      <%=f.fields_for :endereco do |endereco| %>
        <div class="field">
          <%= endereco.label :cidade %><br>
          <%= endereco.text_field :cidade %>
        </div>
        <div class="field">
          <%= endereco.label :bairro %><br>
          <%= endereco.text_field :bairro %>
        </div>
        <div class="field">
          <%= endereco.label :cep %><br>
          <%= endereco.text_field :cep %>
        </div>
        <div class="field">
          <%= endereco.label :rua %><br>
          <%= endereco.text_field :rua %>
        </div>
        <div class="field">
          <%= endereco.label :uf %><br>
          <%= endereco.select :uf, enums_uf(@contato.endereco.uf) %>
        </div>
        
      <% end %>

       <%=f.fields_for :telefone do |fone| %>
          <div class="field">
            <%= fone.label :telefone %><br>
            <%= fone.text_field :telefone %>
          </div>
        <% end %>
  

      <div class="field">
        <%= f.label :obs %><br>
        <%= f.text_area :obs %>
      </div>
      <div class="actions">
        <%= link_to 'Voltar', contatos_path, :class => "btn btn-info"  %>
        <%= f.submit 'Salvar', :class => "btn btn-success" %>
      </div>

    <% end %>

    

    
</dir>
