  <div class="cabecalho">
    <%= render partial: "/tampletes/menu" %>
  </div>


  <div id="conteudo">
    <h1 class="titulo">Lista de contatos</h1>
    <p id="notice"><%= notice %></p>
    
     <%= link_to 'Novo contato', new_contato_path, :class => "btn btn-info"  %>

         
    <table class="table table-striped table-sm" style="margin-top: 5px;">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Tipo</th>
          <th>UF</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @contatos.each do |contato| %>
        <tr>
          <td><%= contato.nome %></td>
          <td><%= contato.email %></td>
          <td><%= contato.tipo.descricao %></td>
          <td><%= contato.endereco.uf%></td>
          <td><%= link_to 'Exibir', contato %></td>
          <td><%= link_to 'Editar', edit_contato_path(contato)  %></td>
          <td><%= link_to 'Excluir', contato,  method: :delete, data: { confirm: t("messages.confirm") } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>