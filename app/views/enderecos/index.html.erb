<div class="cabecalho">
  <%= render partial: "/tampletes/menu" %>
</div>
<div id="conteudo">
  <h1 class="titulo">Lista de endereços</h1>
  <p id="notice"><%= notice %></p>
  
  <%= link_to 'Novo Endereço', new_endereco_path, :class => "btn btn-info"  %>
  
  <table class="table table-striped table-sm" style="margin-top: 5px;">
    <thead class="thead-dark">
      <tr>
        <th>Cidade</th>
        <th>Bairro</th>
        <th>Cep</th>
        <th>Rua</th>
        <th>Uf</th>
        <th>Contato</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @enderecos.each do |endereco| %>
      <tr>
        <td><%= endereco.cidade %></td>
        <td><%= endereco.bairro %></td>
        <td><%= endereco.cep %></td>
        <td><%= endereco.rua %></td>
        <td><%= endereco.uf %></td>
        <td><%= endereco.contato.id %> - <%= endereco.contato.nome %></td>
        <td><%= link_to 'Exibir', endereco %></td>
        <td><%= link_to 'Editar', edit_endereco_path(endereco) %></td>
        <td><%= link_to 'Excluir', endereco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>

</div>